<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/schoolIcon.jpg" type="image/x-icon" />
    <title>管理住宿學生</title>

    <link href="/stylesheets/admin_boarder.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg setNav justify-content-between">
            <a class="navbar-brand fs-4" href="/">
                <img src="/images/schoolLogo.png" alt="" width="40" height="40" class="d-inline-block">
                國立高雄大學學生住宿系統
            </a>
            <ul class="navbar-nav fs-5">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/boarder">管理住宿學生</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/application">管理住宿申請</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/dormitory">管理宿舍資料</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/repairForm/all">管理報修申請</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/announcement">管理公告</a>
                </li>
            </ul>
        </nav>
        <p class="setTitleBlock">管理住宿學生</p>
    </header>

    <main>
        <div class="setContentBlock">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th scope="col">學號</th>
                        <th scope="col">姓名</th>
                        <th scope="col">棟別</th>
                        <th scope="col">住宿房間</th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                
                <tbody class="studentContainer">
                    <% data=JSON.parse(data); %>
                    <% for(var i=0; i < data.length; i++) { %>
                        <tr>
                            <td><%= data[i].StuID %></td>
                            <td><%= data[i].UName %></td>
                            <td><%= data[i].DName %></td>
                            <td><%= data[i].RoomNumber %></td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <button class="setEditButton"><img src="/images/iconEdit.png" alt="editIcon"
                                            data-bs-toggle="modal" data-bs-target="#editModal<%= data[i].StuID %>"></button>
                                            <button class="setEditButton"><img src="/images/iconDelete.png" alt="deleteIcon"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal<%= data[i].StuID %>"></button>
                                            </div>
                                        </td>
                                    </tr>
                    
                    <!-- Edit Modal -->
                    <div class="modal fade" id="editModal<%= data[i].StuID %>" tabindex="-1" aria-labelledby="updateModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">編輯</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                    
                                <div class="modal-body">
                                    <!-- <form> -->
                                    <div class="mb-3">
                                        <label for="dorm-name" class="col-form-label">棟別</label>
                                        <select class="form-select form-select-sm" aria-label=".form-select-sm example"
                                            id="dorm-name<%= data[i].StuID %>">
                                            <% if(data[i].DName=="學一宿舍OA" ){ %>
                                                <option value="學一宿舍OA" selected>學一宿舍OA</option>
                                                <option value="學一宿舍OB">學一宿舍OB</option>
                                                <option value="學二宿舍OE">學二宿舍OE</option>
                                                <option value="學二宿舍OF">學二宿舍OF</option>
                                                <option value="綜合宿舍B01">綜合宿舍B01</option>
                                                <%} else if(data[i].DName=="學一宿舍OB" ){ %>
                                                    <option value="學一宿舍OA">學一宿舍OA</option>
                                                    <option value="學一宿舍OB" selected>學一宿舍OB</option>
                                                    <option value="學二宿舍OE">學二宿舍OE</option>
                                                    <option value="學二宿舍OF">學二宿舍OF</option>
                                                    <option value="綜合宿舍B01">綜合宿舍B01</option>
                                                    <%} else if(data[i].DName=="學二宿舍OE" ){ %>
                                                        <option value="學一宿舍OA">學一宿舍OA</option>
                                                        <option value="學一宿舍OB">學一宿舍OB</option>
                                                        <option value="學二宿舍OE" selected>學二宿舍OE</option>
                                                        <option value="學二宿舍OF">學二宿舍OF</option>
                                                        <option value="綜合宿舍B01">綜合宿舍B01</option>
                                                        <%} else if(data[i].DName=="學二宿舍OF" ){ %>
                                                            <option value="學一宿舍OA">學一宿舍OA</option>
                                                            <option value="學一宿舍OB">學一宿舍OB</option>
                                                            <option value="學二宿舍OE">學二宿舍OE</option>
                                                            <option value="學二宿舍OF" selected>學二宿舍OF</option>
                                                            <option value="綜合宿舍B01">綜合宿舍B01</option>
                                                            <%} else{%>
                                                                <option value="學一宿舍OA">學一宿舍OA</option>
                                                                <option value="學一宿舍OB">學一宿舍OB</option>
                                                                <option value="學二宿舍OE">學二宿舍OE</option>
                                                                <option value="學二宿舍OF">學二宿舍OF</option>
                                                                <option value="綜合宿舍B01" selected>綜合宿舍B01</option>
                                                                <%}%>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="room-number" class="col-form-label">住宿房間：</label>
                                        <input type="text" class="form-control" value='<%= data[i].RoomNumber %>'
                                            id="room-number<%= data[i].StuID %>">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                                        <button type="submit" class="btn btn-primary" onclick=updateItem("<%=data[i].StuID %>")>確認</button>
                                    </div>
                                    <!-- </form> -->
                                </div>
                    
                            </div>
                        </div>
                    </div>
                    <!--Delete Modal -->
                    <div class="modal fade" id="deleteModal<%= data[i].StuID %>" tabindex="-1" aria-labelledby="deleteModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">刪除</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        是否確定刪除？
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                                        <button class="btn btn-primary" id="deleteButton<%= data[i].StuID %>"
                                            onclick=deleteItem("<%=data[i].StuID %>") >確認</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </tbody>
            </table>
        </div>
        
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>
    <script src="/javascripts/admin_boarder.js"></script>
</body>

</html>